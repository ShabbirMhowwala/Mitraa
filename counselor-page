<script>
  const modal = document.getElementById('booking-modal');
  const modalCounselorName = document.getElementById('modal-counselor-name');
  const confirmBtn = document.getElementById('confirm-booking-btn');

  function openBookingModal(name) {
    modalCounselorName.textContent = "Book a session with " + name;
    modal.classList.add('active');
    generateCalendar();
    document.querySelectorAll('.day.selected, .time-slot.selected').forEach(el => el.classList.remove('selected'));
  }
  function closeBookingModal() { modal.classList.remove('active'); }

  function generateCalendar() {
    const grid = document.querySelector('.calendar-grid');
    grid.innerHTML = `<div class="day-name">Su</div><div class="day-name">Mo</div><div class="day-name">Tu</div><div class="day-name">We</div><div class="day-name">Th</div><div class="day-name">Fr</div><div class="day-name">Sa</div>`;
    const today = new Date(); const month = today.getMonth(); const year = today.getFullYear();
    const firstDay = new Date(year, month, 1).getDay(); const days = new Date(year, month+1, 0).getDate();
    for(let i=0;i<firstDay;i++){grid.insertAdjacentHTML('beforeend',`<div class="day disabled"></div>`);}
    for(let d=1; d<=days; d++){ let cls="day"; if(d<today.getDate()) cls+=" disabled"; grid.insertAdjacentHTML('beforeend',`<div class="${cls}">${d}</div>`);}
  }
  document.addEventListener('click',e=>{
    if(e.target.matches('.day') && !e.target.matches('.disabled')){document.querySelectorAll('.day.selected').forEach(d=>d.classList.remove('selected')); e.target.classList.add('selected');}
    if(e.target.matches('.time-slot')){document.querySelectorAll('.time-slot.selected').forEach(t=>t.classList.remove('selected')); e.target.classList.add('selected');}
  });
  confirmBtn.addEventListener('click',()=>{
    const d=document.querySelector('.day.selected'); const t=document.querySelector('.time-slot.selected');
    if(!d||!t){alert('Please select a date and time.');return;}
    alert(`Appointment confirmed for ${d.textContent}/${new Date().getMonth()+1} at ${t.textContent}`);
    closeBookingModal();
  });
  modal.addEventListener('click',e=>{if(e.target===modal) closeBookingModal();});
</script>
